<div class="container section top-margin bottom-margin">
  <h4>Welcome Back</h4>
  <p>Login to your accont.</p>
  <div class="row">
    <form class="col s12 l6 top-margin">
      <div class="row">
        <div class="input-field col s12">
          <input id="email" name="email" type="text">
          <label for="email">Email</label>
          <span class="helper-text red-text text-darken-4">Please enter your email (ex: abc@xyz.com)</span>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" name="pwd" type="password">
          <label for="password">Password</label>
          <span class="helper-text red-text text-darken-4">Please enter Password, must include 1 number, lowercase ,
            uppercase, symbol and between 8-12</span>
        </div>
      </div>
      <div class="row">
        <input class="btn pink darken-4" style="color: white !important;" type="button" value="Submit">
      </div>
    </form>
  </div>
</div>